~#
def shur( M, V, indices, S, F, solver )
    T := M.T
    neg_ind := Vec[ Int32 ]()
    for i in 0 .. M.nb_rows
        if not ( i in indices )
            neg_ind.push_back( i )
    A := M[ indices, indices ]
    B := M[ indices, neg_ind ]
    C := M[ neg_ind, indices ]
    D := M[ neg_ind, neg_ind ]
    a := V[ indices ]
    b := V[ neg_ind ]
    fact := solver( D )
    S = A - B * ( fact * C )
    F = a - B * ( fact * b )
    

