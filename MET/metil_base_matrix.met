    s := new LazyMatPartOperatorMulMatVecList[ Float64, b.ST ]( nb_rows = a.mat->nb_cols, nb_cols = b.nb_cols )
    # dependencies
    
    for lv in a.mat->data
        for sv in lv.sub_vecs
            s.add_child( sv )
    for lv in b.data
        for sv in lv.sub_vecs
            s.add_child( sv )
    
    s.a->init_using_var( a )
    s.b->init_using_var( b )
    
    out.set_sub_block( 0, 0, s )
    return out

