class GlTransformation[ T = Float64 ]
    data := Mat[ T, Gen[4,4] ]()

    def select( i, j )
        return data[ i, j ]

    def select( i )
        return data.data[ i ]

    static def identity
        res := GlTransformation[ T ]()
        for i in 0 .. 4
            for j in 0 .. 4
                res[ i, j ] = ( i == j )
        return res
        
    static def homothetie( v )
        res := GlTransformation[ T ]()
        for i in 0 .. 4
            for j in 0 .. 4
                res[ i, j ] = ( i == j ) * ( i >= 3 or v[i] )
        return res
    
    static def translation( v )
        res := GlTransformation[ T ]()
        for i in 0 .. 3
            for j in 0 .. 4
                res[ i, j ] = ( i == j ) + ( j == 3 ) * v[i]
        for j in 0 .. 4
            res[ 3, j ] = ( 3 == j )
        return res
    
    static def plane_symetry( point, normal_ )
        normal := normal_ / length( normal_ )
        
        res := GlTransformation[ T ]()
        dotpn := dot( point, normal )
        for i in 0 .. 3
            res[ i, 3 ] = 2 * dotpn * normal[ i ]
        for i in 0 .. 3
            for j in 0 .. 3
                res[ i, j ] = ( i == j ) - 2 * normal[j] * normal[i]
        for j in 0 .. 3
            res[ 3, j ] = 0
        res[ 3, 3 ] = 1
        return res
    
    static def rotation( val_ )
        res := GlTransformation[ T ]()
        angle := norm_2( val_ )
        if assumed( angle == 0 )
            return identity()
        info ( angle == 0 )
        val := val_ / ( angle + ( angle == 0 ) )
        sa := sin( angle )
        ca := cos( angle )
        n0 := val[0] * sa
        n1 := val[1] * sa
        n2 := val[2] * sa
        res[0,0]=ca   res[0,1]=-n2  res[0,2]=n1  res[0,3]=0
        res[1,0]=n2   res[1,1]=ca   res[1,2]=-n0 res[1,3]=0
        res[2,0]=-n1  res[2,1]=n0   res[2,2]=ca  res[2,3]=0
        res[3,0]=0    res[3,1]=0    res[3,2]=0   res[3,3]=1
        for i in 0 .. 3
            for j in 0 .. 3
                res[ i, j ] += val[i] * val[j] * ( 1.0 - ca )
        return res
    
    static def rotation( val, center )
        res := rotation( val )
        for i in 0 .. 3
            res[ i, 3 ] = center[ i ]
            for j in 0 .. 3
                res[ i, 3 ] -= res[ i, j ] * center[ j ]
        return res
    
    static def perspective( znear, ratio )
        res := identity()
        res[ 3, 2 ] = ratio
        res[ 3, 3 ] = - ratio * znear + 1
        return res
    
    static def new_axis( X, Y, Z )
        res := GlTransformation[ T ]()
        for i in 0 .. 3
            res[ 0, i ] = X[i]
            res[ 1, i ] = Y[i]
            res[ 2, i ] = Z[i]
            res[ 3, i ] = 0
            res[ i, 3 ] = 0
        res[ 3, 3 ] = 1
        return res

