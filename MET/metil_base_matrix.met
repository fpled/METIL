def ml_div( M, V ) when M.tensor_order == 2 and M.Structure == TriInf and V.tensor_order == 1
    T := type_promote_list( [ M.T ], V.sub_types, mul, add )
    res := Vec[T]( V )
    for r in 0 .. a.nb_rows
        res[r] -= M[r,r] * ( V[r] - dot( M[r,0..r], res[0..r] ) )
    return res
    
